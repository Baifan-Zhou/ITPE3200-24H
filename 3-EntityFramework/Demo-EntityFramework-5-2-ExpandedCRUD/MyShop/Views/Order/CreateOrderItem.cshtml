@model OrderItem

<h2>Create New OrderItem</h2>

<form asp-action="CreateOrderItem">
    <div class="form-group">
        <label asp-for="ItemId"></label><span class="text-danger">*</span>
        <input asp-for="ItemId" class="form-control" />
        <span asp-validation-for="ItemId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label><span class="text-danger">*</span>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderId"></label><span class="text-danger">*</span>
        <input asp-for="OrderId" class="form-control" />
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Table" class="btn btn-secondary">Back to Order Table</a>
</form>
